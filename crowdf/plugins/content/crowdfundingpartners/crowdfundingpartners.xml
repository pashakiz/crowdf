<?xml version="1.0" encoding="utf-8"?>
<extension version="3.4" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_CROWDFUNDINGPARTNERS</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2015 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>2.0</version>
    <creationDate>30 June, 2015</creationDate>
    <description><![CDATA[
	<p>Content - Crowdfunding Partners is a plug-in that displays a list with partners which are assigned to a project.</p>
	<p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
	<p>Please, <a href="http://extensions.joomla.org/extensions/extension/e-commerce/donations/crowdfunding" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
	]]></description>
    
    <files>
        <filename plugin="crowdfundingpartners">crowdfundingpartners.php</filename>

		<folder>language</folder>
		<folder>tmpl</folder>
    </files>
    
    <help url="PLG_CONTENT_CROWDFUNDINGPARTNERS_HELP_URL"/>

    <config>
        <fields name="params">
            <fieldset name="basic" >
                <field name="display_owner" type="radio" default="0" label="PLG_CONTENT_CROWDFUNDINGPARTNERS_DISPLAY_PROJECT_OWNER" description="PLG_CONTENT_CROWDFUNDINGPARTNERS_DISPLAY_PROJECT_OWNER_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="image_size" type="list"
                       label="PLG_CONTENT_CROWDFUNDINGPARTNERS_IMAGE_SIZE"
                       description="PLG_CONTENT_CROWDFUNDINGPARTNERS_IMAGE_SIZE_DESC"
                       default="small" >

                    <option value="icon">PLG_CONTENT_CROWDFUNDINGPARTNERS_ICON</option>
                    <option value="small">PLG_CONTENT_CROWDFUNDINGPARTNERS_SMALL</option>
                    <option value="medium">PLG_CONTENT_CROWDFUNDINGPARTNERS_MEDIUM</option>
                    <option value="large">PLG_CONTENT_CROWDFUNDINGPARTNERS_LARGE</option>
                </field>

                <field name="width" type="text" label="PLG_CONTENT_CROWDFUNDINGPARTNERS_IMAGE_WIDTH" description="PLG_CONTENT_CROWDFUNDINGPARTNERS_IMAGE_WIDTH_DESC" default="50" />
                <field name="height" type="text" label="PLG_CONTENT_CROWDFUNDINGPARTNERS_IMAGE_HEIGHT" description="PLG_CONTENT_CROWDFUNDINGPARTNERS_IMAGE_HEIGHT_DESC" default="50" />
            </fieldset>
        </fields>
    </config>

</extension>
