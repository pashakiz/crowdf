<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldpath="/administrator/components/com_crowdfunding/models/fields">

        <field name="name" type="text"
               label="COM_CROWDFUNDINGDATA_NAME"
               description="COM_CROWDFUNDINGDATA_NAME_DESCRIPTION"
               filter="trim"
               required="true"
               />

        <field name="email" type="email"
               label="COM_CROWDFUNDINGDATA_EMAIL"
               description="COM_CROWDFUNDINGDATA_EMAIL_DESCRIPTION"
               filter="trim"
               />

        <field name="address" type="textarea" class="span6"
               label="COM_CROWDFUNDINGDATA_ADDRESS"
               description="COM_CROWDFUNDINGDATA_ADDRESS_DESC"
               filter="trim"
               rows="5"
               />

        <field name="country_id" type="cfcountries"
               label="COM_CROWDFUNDINGDATA_COUNTRY"
               description="COM_CROWDFUNDINGDATA_COUNTRY_DESCRIPTION"
               filter="int"
               />

        <field name="id" type="text" class="readonly"
               label="JGLOBAL_FIELD_ID_LABEL"
               description="JGLOBAL_FIELD_ID_DESC"
               default="0"
               readonly="true"
               />

    </fieldset>

</form>
